<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/left_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_pic_left"
            android:src="@mipmap/default_pic"
            android:layout_width="@dimen/user_chat_pic_size"
            android:layout_height="@dimen/user_chat_pic_size"/>
        <LinearLayout
            android:id="@+id/left_msg_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/msg_left"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_time_left"
                android:gravity="center"
                android:textSize="@dimen/current_msg_textsize"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/msg_left"
                android:gravity="center"
                android:textSize="@dimen/current_msg_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:background="#aaa"
            android:id="@+id/msg_pic_left"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/msg_pic_height"/>
        <!--<include
            android:id="@+id/file"
            layout="@layout/layout_chat_file"
            android:visibility="gone"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_area"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<include
            android:id="@+id/file"
            layout="@layout/layout_chat_file"
            android:visibility="gone"/>-->
        <ImageView
            android:id="@+id/msg_pic_right"
            android:background="#aaa"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/msg_pic_height"/>
        <LinearLayout
            android:id="@+id/right_msg_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/msg_right"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_time_right"
                android:gravity="center"
                android:textSize="@dimen/current_msg_textsize"
                android:text="xixi"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/msg_right"
                android:gravity="center"
                android:textSize="@dimen/current_msg_textsize"
                android:text="hehe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/user_pic_right"
            android:src="@mipmap/default_pic"
            android:layout_width="@dimen/user_chat_pic_size"
            android:layout_height="@dimen/user_chat_pic_size"/>
    </LinearLayout>


</LinearLayout>
