<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_item_size"
    android:padding="5dp"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/user_pic"
        android:src="@mipmap/default_pic"
        android:layout_width="@dimen/user_pic_size"
        android:layout_height="@dimen/user_pic_size"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_name"
            android:textSize="@dimen/user_name_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/state"
            android:textSize="@dimen/user_state_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
